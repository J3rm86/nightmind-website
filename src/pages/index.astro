<style>
    header {
        text-align: center;
        padding: 60px 0 40px;
        color: white;
    }

    .hero-logo {
        font-size: 3.5rem;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #a855f7, #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-headline {
        font-size: 2rem;
        font-weight: bold;
        color: white;
        margin-bottom: 8px;
    }

    .tagline {
        font-size: 1.1rem;
        color: #aaa;
        margin-bottom: 24px;
    }

    .app-badges {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-top: 20px;
    }

    .app-badges img {
        height: 50px;
        transition: transform 0.2s;
    }

    .app-badges img:hover {
        transform: scale(1.05);
    }

    .app-badges .coming-soon {
        position: relative;
        opacity: 0.7;
        cursor: default;
    }

    .app-badges .coming-soon:hover img {
        transform: none;
    }

    .badge-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: bold;
        white-space: nowrap;
    }

    /* How It Works */
    .how-it-works {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 30px 0;
        flex-wrap: wrap;
    }

    .step {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 24px;
        text-align: center;
        flex: 1;
        min-width: 150px;
        max-width: 200px;
        backdrop-filter: blur(10px);
    }

    .step-icon {
        font-size: 2.5rem;
        margin-bottom: 12px;
    }

    .step h3 {
        color: white;
        font-size: 1.1rem;
        margin-bottom: 8px;
    }

    .step p {
        color: #ccc;
        font-size: 0.9rem;
        margin: 0;
    }

    /* Features */
    .feature {
        display: flex;
        gap: 16px;
        padding: 20px 0;
        border-bottom: 1px solid #eee;
    }

    .feature:last-child {
        border-bottom: none;
    }

    .feature-icon {
        font-size: 2rem;
        flex-shrink: 0;
    }

    .feature-content h3 {
        color: #1a1a2e;
        margin: 0 0 8px 0;
        font-size: 1.1rem;
    }

    .feature-content p {
        color: #555;
        margin: 0;
        font-size: 0.95rem;
    }

    /* Screenshots */
    .screenshots {
        margin: 40px 0;
        text-align: center;
    }

    .screenshots h2 {
        color: white;
        margin-bottom: 24px;
    }

    .screenshot-grid {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .screenshot-grid img {
        height: 400px;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    }

    /* CTA Section */
    .cta-section {
        text-align: center;
        padding: 40px 0;
        margin-top: 20px;
    }

    .cta-section h2 {
        color: white;
        font-size: 1.8rem;
        margin-bottom: 8px;
    }

    .cta-section p {
        color: #aaa;
        margin-bottom: 20px;
    }

    .cta-section .app-badges img {
        height: 60px;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .hero-logo {
            font-size: 2.5rem;
        }

        .hero-headline {
            font-size: 1.5rem;
        }

        .how-it-works {
            flex-direction: column;
            align-items: center;
        }

        .step {
            max-width: 100%;
        }

        .feature {
            flex-direction: column;
            text-align: center;
        }
    }
</style>
